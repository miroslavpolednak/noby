<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
	<Company>Wookiee.Apps s.r.o.</Company>
    <Product>Common Infrastructure Solution</Product>
    <Authors>Filip Tuma</Authors>
	<Nullable>enable</Nullable>
	<Platforms>AnyCPU;x64</Platforms>
	<ImplicitUsings>enable</ImplicitUsings>
	  <Version>1.0.0.0</Version>
  </PropertyGroup>

	<PropertyGroup>
		<AnalysisMode>Recommended</AnalysisMode>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="ClearCache.proto" />
	  <None Remove="DiscoverableService.proto" />
	  <None Remove="GetService.proto" />
	</ItemGroup>
	
	<ItemGroup>
		<PackageReference Include="Google.Protobuf" Version="3.22.1" />
		<PackageReference Include="Grpc.Net.Client" Version="2.52.0" />
		<PackageReference Include="Grpc.Tools" Version="2.52.0">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>
	
	<ItemGroup>
	  <ProjectReference Include="..\..\..\CIS\Infrastructure.gRPC.CisTypes\CIS.Infrastructure.gRPC.CisTypes.csproj" />
	</ItemGroup>
	
	<ItemGroup>
		<Protobuf Include="ServiceDiscovery.v1.proto" GrpcServices="Both" />
		<Protobuf Include="Messages/GetService.proto" GrpcServices="None" />
		<Protobuf Include="Messages/DiscoverableService.proto" GrpcServices="None" />
		<Protobuf Include="Messages/ClearCache.proto" GrpcServices="None" />
		<Protobuf Include="Messages/GetServices.proto" GrpcServices="None" />
	</ItemGroup>
</Project>
