<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Product>Common Infrastructure Solution</Product>
    <Authors>Filip Tuma</Authors>
	<Nullable>enable</Nullable>
	<Platforms>AnyCPU;x64</Platforms>
	<ImplicitUsings>enable</ImplicitUsings>
	  <Version>1.0.0.0</Version>
  </PropertyGroup>

	<PropertyGroup>
		<AnalysisMode>Recommended</AnalysisMode>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<DocumentationFile>CIS.InternalServices.ServiceDiscovery.xml</DocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Google.Protobuf" Version="3.22.1" />
		<PackageReference Include="Grpc.Net.Client" Version="2.52.0" />
		<PackageReference Include="Grpc.Tools" Version="2.52.0">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Microsoft.AspNetCore.Grpc.JsonTranscoding" Version="7.0.4" />
	</ItemGroup>
	
	<ItemGroup>
	  <ProjectReference Include="..\..\..\CIS\Infrastructure.gRPC.CisTypes\CIS.Infrastructure.gRPC.CisTypes.csproj" />
	</ItemGroup>
	
	<ItemGroup>
		<Protobuf Include="ServiceDiscovery.v1.proto" GrpcServices="Both" />
		<Protobuf Include="Messages/GetService.proto" GrpcServices="None" />
		<Protobuf Include="Messages/DiscoverableService.proto" GrpcServices="None" />
		<Protobuf Include="Messages/GetServices.proto" GrpcServices="None" />
	</ItemGroup>
	
	<ItemGroup>
	  <None Update="CIS.InternalServices.ServiceDiscovery.xml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
</Project>
