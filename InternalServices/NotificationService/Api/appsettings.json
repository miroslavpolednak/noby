{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "CIS": "Information",
        "ExternalServices": "Information",
        "DomainServices": "Information",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
        "Microsoft.AspNetCore.Server.Kestrel": "Fatal"
      }
    }
  },

  "CisEnvironmentConfiguration": {
    "DefaultApplicationKey": "CIS:NotificationService",
    "EnvironmentName": "",
    "SecretsSource": "ConjurEnvironmentVariables",
    "ServiceDiscoveryUrl": "",
    "InternalServicesLogin": "XX_NOBY_RMT_USR_TEST",
    "InternalServicePassword": "",
    "DisableContractDescriptionPropagation": false
  },

  "FeatureManagement": {
    "BlueBang": true,
    "ElectronicSigning": true,
    "LegacyEndpoints": true
  },

  "ConnectionStrings": {
    "default": ""
  },

  "CisSecurity": {
    "ServiceAuthentication": {
      "Validator": "NativeActiveDirectory",
      "Domain": "vsskb.cz",
      "AdHost": "vsskb.cz",
      "AdPort": 636,
      "IsSsl": true,
      "AllowedUsers": []
    }
  },

  "CisTelemetry": {
    "Logging": {
      "LogType": "Grpc",
      "Application": {
        "LogRequestPayload": true,
        "LogResponsePayload": true,
        "UseConsole": true,
        "File": {
          "Path": "",
          "Filename": "NotificationService.log"
        },
        "Seq": {
          "ServerUrl": ""
        }
      },
      "Audit": {
        "ConnectionString": "",
        "HashSecretKey": ""
      }
    },
    "Tracing": {
      "OTLP": {
        "CollectorUrl": ""
      }
    }
  },

  "AppConfiguration": {
    "Consumers": [],
    "EmailSenders": {
      "Mcs": [],
      "Mpss": []
    },
    "EmailFormats": [
      "application/html",
      "application/mht",
      "application/text",
      "html",
      "text/html"
    ],
    "EmailLanguageCodes": [
      "cs",
      "en"
    ],
    "KafkaTopics": {
      "McsResult": "",
      "McsSender": ""
    },
    "S3Buckets": {
      "Mcs": ""
    }
  },

  "S3Configuration": {
    "ServiceUrl": "",
    "AccessKey": "",
    "SecretKey": "",
    "RetentionPeriod": 0
  },

  "Apicurio": {
    "Url": "",
    "SchemaIdentificationType": "ContentId"
  },

  "AvroSerializer": {
    "SerializerType": "Confluent",
    "BufferBytes": 100,
    "SubjectNameStrategy": "Record",
    "AutoRegisterSchemas": false,
    "UseLatestVersion": false
  },

  "AvroDeserializer": {
    "DeserializerType": "Confluent"
  },

  "SpeedTracing": {
    "EamApplicationName": "NotificationService",
    "EamComponentName": "Api"
  },

  "CisMessaging": {
    "Kafka": {
      "Debug": "security,broker",
      "BootstrapServers": "",
      "SslKeyLocation": "",
      "SslKeyPassword": "",
      "SecurityProtocol": "ssl",
      "SslCertificateLocation": "",
      "SslCaCertificateStores": "Root,CA,Trust"
    }
  },

  "ExternalServices": {},

  "BackgroundServices": {
    "SendEmailsJob": {
      "CronSchedule": "* * * * *",
      "Disabled": false,
      "CustomConfiguration": {
        "NumberOfEmailsAtOnce": 100,
        "EmailDomainWhitelist": [],
        "SmtpConfiguration": {
          "Host": "relay.mpss.cz",
          "Port": 25,
          "SecureSocket": "StartTls",
          "Timeout": 60,
          "DisableServerCertificateValidation": false
        }
      }
    },
    "SetExpiredEmailsJob": {
      "CronSchedule": "*/30 * * * *",
      "Disabled": false,
      "CustomConfiguration": {
        "EmailSlaInMinutes": 2880
      }
    }
  }
}