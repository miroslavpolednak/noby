  "CisCors": {
    "EnableCors": true,
    "AllowedOrigins": [ "https://localhost", "https://localhost:8080" ]
  },

  "CisDistributedCache": {
    "CacheType": "MsSql",
    "SerializationType": "Json",
    "KeyPrefix": ""
  },

  "MpssSecurityCookie": {
    "RijndealPassword": "",
    "RijndaelVector": "",
    "RijndaelStrength": 128,
    "RijndaelPwdIterations": 2,
    "RijndaelSalt": ""
