      "LogType": "WebApi",
      "IncludeOnlyPaths": [ "/api/", "/auth/", "/oidc-" ],
      "Application": {
        "LogRequestPayload": true,
        "LogResponsePayload": true,
        "UseConsole": true,
        "File": {
          "Path": "",
          "Filename": "noby_.log"
        },
        "Seq": {
          "ServerUrl": ""
        }
      },
      "Audit": {
        "ConnectionString": "",
        "HashSecretKey": ""
      }
    },
    "Tracing": {
      "OTLP": {
        "CollectorUrl": ""
      }
    }
  },

  "ExternalServices": {
    "AddressWhisperer": {
      "V1": {
        "ImplementationType": "Real",
        "UseServiceDiscovery": true,
        "Authentication": "Basic",
        "Username": "mpssNobyServicesUser",
        "Password": "",
        "UseLogging": true,
        "IgnoreServerCertificateErrors": true,
        "RequestTimeout": 60,
        "LogRequestPayload": true,
        "LogResponsePayload": true
      }
    },
    "Crem": {
      "V1": {
        "ImplementationType": "Real",
        "UseServiceDiscovery": true,
        "Authentication": "Basic",
        "Username": "mpssNobyK8sServicesUser",
        "Password": "",
        "RequestTimeout": 60,
        "LogRequestPayload": true,
        "LogResponsePayload": true
      }
    },
    "RuianAddress": {
      "V1": {
        "ImplementationType": "Real",
        "UseServiceDiscovery": true,
