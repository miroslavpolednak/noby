{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information",
        "NOBY.Api": "Information",
        "CIS": "Debug",
        "ExternalServices": "Debug",
        "DomainServices": "Debug",
        "System.Net.Http.HttpClient": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
        "CIS.Infrastructure.Security.CisServiceAuthenticationHandler": "Warning",
        "Microsoft.AspNetCore.Server.Kestrel": "Fatal"
      }
    }
  },

  "ConnectionStrings": {
    "dataProtection": "",
    "dataAggregator": ""
  },

  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://0.0.0.0:6001"
      }
    }
  },

  "CisTelemetry": {
    "Logging": {
      "LogType": "WebApi",
      "Application": {
        "UseConsole": true,
        "File": {
          "Path": "r:\\LogFiles\\www\\NOBY-FAT",
          "Filename": "noby_.log"
        },
        "Seq": {
          "ServerUrl": "http://localhost:6341"
        }
      },
      "Audit": {
        "File": {
          "Path": "r:\\LogFiles\\www\\NOBY-FAT",
          "Filename": "Audit-noby_.log"
        }
      }
    }
  },

  "ExternalServices": {
    "AddressWhisperer": {
      "V1": {
        "ImplementationType": "Real",
        "UseServiceDiscovery": true,
        "Authentication": "Basic",
        "Username": "mpssNobyServicesUser",
        "Password": "password",
        "LogPayloads": true,
        "IgnoreServerCertificateErrors": true
      }
    }
  },

  "CisEnvironmentConfiguration": {
    "DefaultApplicationKey": "FOMS:Api",
    "EnvironmentName": "FAT",
    "ServiceDiscoveryUrl": "https://172.30.35.51:31000",
    "InternalServicesLogin": "a",
    "InternalServicePassword": "a"
  },

  "CisCors": {
    "EnableCors": true,
    "AllowedOrigins": [ "https://localhost", "https://localhost:8080", "https://fat.noby.cz" ]
  },

  "NOBY": {
    "AuthenticationScheme": "SimpleLoginAuthentication",
    "EnableSwaggerUI": true
  }
}
